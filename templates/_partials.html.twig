{% macro knp_pagination_sortable_header(pagination, label, key) %}
<th class="table-th{% if pagination.isSorted(key) %} sorted{% endif %}">{{ knp_pagination_sortable(pagination, label, key) }}</th>
{% endmacro %}

{% macro format_amount(amount) %}
  {{ amount|format_number({fraction_digit: 2}) }}
{% endmacro %}
