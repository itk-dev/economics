{% macro knp_pagination_sortable_header(pagination, label, key, attr={}) %}
<th class="table-th {{ attr.class|default('') }} {{ pagination.isSorted(key) ? 'sorted' }}">{{ knp_pagination_sortable(pagination, label, key) }}</th>
{% endmacro %}

{% macro format_amount(amount) %}
  {{ amount|format_number({fraction_digit: 2}) }}
{% endmacro %}
