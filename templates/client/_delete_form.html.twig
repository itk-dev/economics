<form method="post" action="{{ path('app_client_delete', {'id': client.id}|merge(view is defined ? {view: view} : {})) }}" onsubmit="return confirm('{{ 'delete.confirm'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="button button-danger">{{ 'clients.action_delete_account'|trans }}</button>
</form>
