{% extends 'base.html.twig' %}

{% block title %}{{ 'client.title'|trans }}{% endblock %}

{% block content %}
    <a class="link" href="{{ path('app_client_new', {view: view}) }}"
       style="float: right">{{ 'clients.action_create_new'|trans }}</a>

    <h1 class="page-title">{{ 'client.title'|trans }}</h1>

    {% set numberOfColumns = 11 %}

    {# TODO: Add pagination, sorting and filters #}

    <table class="table margin-bottom">
        <thead class="table-thead">
        <tr>
            <th class="table-th">{{ 'clients.id'|trans }}</th>
            <th class="table-th">{{ 'clients.name'|trans }}</th>
            <th class="table-th">{{ 'clients.contact'|trans }}</th>
            <th class="table-th">{{ 'clients.standard_price'|trans }}</th>
            <th class="table-th">{{ 'clients.type'|trans }}</th>
            <th class="table-th">{{ 'clients.account'|trans }}</th>
            <th class="table-th">{{ 'clients.psp'|trans }}</th>
            <th class="table-th">{{ 'clients.ean'|trans }}</th>
            <th class="table-th">{{ 'clients.sales_channel'|trans }}</th>
            <th class="table-th">{{ 'clients.customer_key'|trans }}</th>
            <th class="table-th">{{ 'clients.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for index, client in clients %}
            <tr class="{{ index % 2 == 0 ? 'table-tr' : 'table-tr-alt' }}">
                <td class="table-td">{{ client.id }}</td>
                <td class="table-td">{{ client.name }}</td>
                <td class="table-td">{{ client.contact }}</td>
                <td class="table-td">{{ client.standardPrice }}</td>
                {% if client.type is not null %}
                    <td class="table-td">{{ client.type.value }}</td>
                {% else %}
                    <td class="table-td"></td>
                {% endif %}
                <td class="table-td">{{ client.account }}</td>
                <td class="table-td">{{ client.psp }}</td>
                <td class="table-td">{{ client.ean }}</td>
                <td class="table-td">{{ client.salesChannel }}</td>
                <td class="table-td">{{ client.customerKey }}</td>
                <td class="table-td">
                    <a class="link" href="{{ path('app_client_edit', {view: view, 'id': client.id}) }}">{{ 'clients.action_edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr class="table-tr">
                <td class="table-td"
                    colspan="{{ numberOfColumns }}">{{ 'clients.list_no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        <tr class="table-tr">
            <td class="table-td" colspan="{{ numberOfColumns }}">
                <a class="link" href="{{ path('app_client_new', {view: view}) }}">
                    {{ 'clients.action_create_new'|trans }}
                </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
