{% extends 'base.html.twig' %}

{% block title %}{{ 'client.new'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'client.new'|trans }}</h1>

    {{ form_start(form) }}
        <div class="grid-split-2 selections" {{ stimulus_controller('choices') }}>
            {{ form_rest(form) }}
        </div>
        <button class="button">{{ 'client.action_create'|trans }}</button>
    {{ form_end(form) }}

    <div class="bottom-actions">
        <a class="link" href="{{ path('app_client_index', {}|merge(view is defined ? {view: view} : {})) }}">{{ 'client.back_to_list'|trans }}</a>
    </div>
{% endblock %}
