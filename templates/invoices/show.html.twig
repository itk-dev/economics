{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block content %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ invoice.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>Recorded</th>
                <td>{{ invoice.recorded ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CustomerAccountId</th>
                <td>{{ invoice.customerAccountId }}</td>
            </tr>
            <tr>
                <th>RecordedDate</th>
                <td>{{ invoice.recordedDate ? invoice.recordedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ExportedDate</th>
                <td>{{ invoice.exportedDate ? invoice.exportedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LockedContactName</th>
                <td>{{ invoice.lockedContactName }}</td>
            </tr>
            <tr>
                <th>LockedType</th>
                <td>{{ invoice.lockedType }}</td>
            </tr>
            <tr>
                <th>LockedAccountKey</th>
                <td>{{ invoice.lockedAccountKey }}</td>
            </tr>
            <tr>
                <th>LockedSalesChannel</th>
                <td>{{ invoice.lockedSalesChannel }}</td>
            </tr>
            <tr>
                <th>PaidByAccount</th>
                <td>{{ invoice.paidByAccount }}</td>
            </tr>
            <tr>
                <th>DefaultPayToAccount</th>
                <td>{{ invoice.defaultPayToAccount }}</td>
            </tr>
            <tr>
                <th>DefaultMaterialNumber</th>
                <td>{{ invoice.defaultMaterialNumber }}</td>
            </tr>
            <tr>
                <th>PeriodFrom</th>
                <td>{{ invoice.periodFrom ? invoice.periodFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PeriodTo</th>
                <td>{{ invoice.periodTo ? invoice.periodTo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ invoice.createdBy }}</td>
            </tr>
            <tr>
                <th>UpdatedBy</th>
                <td>{{ invoice.updatedBy }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ invoice.updatedAt ? invoice.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoices_index') }}">back to list</a>

    <a href="{{ path('app_invoices_edit', {'id': invoice.id}) }}">edit</a>

