{% extends 'base.html.twig' %}

{% block title %}{{ 'invoices.edit'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ invoice.name }}</h1>

    {{ form_start(form) }}
    <div class="grid-split">
        <div>
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.project) }}
            {{ form_row(form.client) }}
            {{ form_row(form.defaultMaterialNumber) }}
            {{ form_row(form.periodFrom) }}
            {{ form_row(form.periodTo) }}
            {{ form_row(form.payerAccount) }}
            {{ form_row(form.defaultReceiverAccount) }}
        </div>
        <div>
            <ul class="list-group margin-bottom">
                <li class="list-group-item border-bottom text-bold">{{ 'invoices.invoice_for'|trans({'%project%': invoice.project.name, '%projectTrackerId%': invoice.project.projectTrackerId}) }}</li>
                <li class="list-group-item border-bottom">{{ 'invoices.id'|trans }}: {{ invoice.id }}</li>
                <li class="list-group-item border-bottom">{{ 'invoices.status'|trans }}: {{ invoice.recorded ? 'invoices.status_posted'|trans : 'invoices.status_not_posted'|trans }}</li>
            </ul>
            <ul class="list-group margin-bottom">
                <li class="list-group-item border-bottom text-bold">{{ 'invoices.client_information'|trans }}</li>
                {% if invoice.client != null %}
                    <li class="list-group-item border-bottom">{{ 'invoices.client_name'|trans }}: {{ invoice.client.name }}</li>
                    <li class="list-group-item border-bottom">{{ 'invoices.client_contact'|trans }}: {{ invoice.client.contact }}</li>
                    <li class="list-group-item border-bottom">{{ 'invoices.client_standard_price'|trans }}: {{ invoice.client.standardPrice }}</li>
                    <li class="list-group-item border-bottom">{{ 'invoices.client_type'|trans }}: {{ invoice.client.type }}</li>
                    <li class="list-group-item border-bottom">{{ 'invoices.client_account'|trans }}: {{ invoice.client.account }}</li>
                    <li class="list-group-item border-bottom">{{ 'invoices.client_psp'|trans }}: {{ invoice.client.psp }}</li>
                {% else %}
                    <li class="list-group-item">{{ 'invoices.no_client'|trans }}</li>
                {% endif %}
            </ul>

            <button class="button">{{ 'invoices.action_save'|trans }}</button>
        </div>
    </div>
    <div>
        <h3 class="subheading">{{ 'invoices.invoice_entries'|trans }}</h3>

        <table class="table margin-bottom">
            <thead class="table-thead">
            <tr>
                <th class="table-th">{{ 'invoices.invoice_entry_receiver_acccount'|trans }}</th>
                <th class="table-th">{{ 'invoices.invoice_entry_material_number'|trans }}</th>
                <th class="table-th">{{ 'invoices.invoice_entry_product'|trans }}</th>
                <th class="table-th">{{ 'invoices.invoice_entry_amount'|trans }}</th>
                <th class="table-th">{{ 'invoices.invoice_entry_price'|trans }}</th>
                <th class="table-th">{{ 'invoices.invoice_entry_total_price'|trans }}</th>
                <th class="table-th">{{ 'invoices.list_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for index, invoiceEntry in invoice.invoiceEntries %}
                <tr class="{{ index % 2 == 0 ? 'table-tr' : 'table-tr-alt' }}">
                    <td class="table-td">{{ invoiceEntry.account }}</td>
                    <td class="table-td">{{ invoiceEntry.materialNumber }}</td>
                    <td class="table-td">{{ invoiceEntry.product }}</td>
                    <td class="table-td">{{ invoiceEntry.amount }}</td>
                    <td class="table-td">{{ invoiceEntry.price }}</td>
                    <td class="table-td">{{ invoiceEntry.price * invoiceEntry.amount }}</td>
                    <td class="table-td">
                        <a class="link" href="{{ path('app_invoices_edit', {'id': invoiceEntry.id}) }}">{{ 'invoices.action_edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr class="table-tr">
                    <td colspan="7" class="table-td">{{ 'invoices.list_no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            <tr class="table-tr">
                <td colspan="7" class="table-td"><a class="link" href="{{ path('app_invoices_new') }}">{{ 'invoices.action_create_new_invoice_entry'|trans }}</a>
            </tr>
            </tbody>
        </table>
    </div>
    {{ form_end(form) }}

    <div class="bottom-actions">
        <a class="link" href="{{ path('app_invoices_index') }}">{{ 'invoices.back_to_list'|trans }}</a>
        {{ include('invoices/_delete_form.html.twig') }}
    </div>
{% endblock %}
