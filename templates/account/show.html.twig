{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block content %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ account.value }}</td>
            </tr>
            <tr>
                <th>ProjectTrackerId</th>
                <td>{{ account.projectTrackerId }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ account.source }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ account.status }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ account.category }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ account.createdBy }}</td>
            </tr>
            <tr>
                <th>UpdatedBy</th>
                <td>{{ account.updatedBy }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_index') }}">back to list</a>

    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
