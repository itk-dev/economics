{% extends 'base.html.twig' %}

{% block title %}{{ 'accounts.title'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'accounts.title'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="button">{{ 'accounts.action_save'|trans }}</button>
    {{ form_end(form) }}

    <div class="bottom-actions">
        <a class="link" href="{{ path('app_account_index') }}">{{ 'accounts.back_to_list'|trans }}</a>
        {{ include('account/_delete_form.html.twig') }}
    </div>
{% endblock %}
