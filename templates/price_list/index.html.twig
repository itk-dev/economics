{% extends 'base.html.twig' %}

{% block title %}{{ 'price_list.title'|trans }}{% endblock %}

{% block content %}
     <h1 class="page-title">{{ 'price_list.title'|trans }}</h1>

    <table class="table margin-bottom">
        <thead class="table-thead">
            <tr>
                <th class="table-th">Id</th>
                <th class="table-th">Name</th>
                <th class="table-th">Price</th>
                <th class="table-th">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for index, price_list in price_lists %}
            <tr class="{{ index % 2 == 0 ? 'table-tr' : 'table-tr-alt' }}">
                <td class="table-td">{{ price_list.id }}</td>
                <td class="table-td">{{ price_list.name }}</td>
                <td class="table-td">{{ price_list.price }}</td>
                <td class="table-td">
                    <a href="{{ path('app_price_list_show', {'id': price_list.id}) }}">show</a>
                    <a href="{{ path('app_price_list_edit', {'id': price_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button" href="{{ path('app_price_list_new') }}">Create new</a>
{% endblock %}
