<form method="post" action="{{ path('app_group_delete', {id: group.id}) }}" onsubmit="return confirm('{{ 'delete.confirm'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
    <button class="button button-danger">{{ 'groups.action_delete_group'|trans }}</button>
</form>
