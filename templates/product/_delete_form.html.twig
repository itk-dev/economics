<form method="post" action="{{ path('app_product_delete', {'id': product.id}|merge(view is defined ? {view: view} : {})) }}" onsubmit="return confirm('{{ 'delete.confirm'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="button button-danger">{{ 'product.action_delete'|trans }}</button>
</form>
