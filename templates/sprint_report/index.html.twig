{% extends 'base.html.twig' %}

{% block title %}{{ 'sprint_report.title'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'sprint_report.title'|trans }}</h1>

    <div class="content" {{ stimulus_controller('sprint-report') }}>
        <div class="selections">
            {{ form(form) }}
        </div>
        <div id="report">
            {% if report is defined and report is not null %}
                {% set sprintReport = report.data %}
                <div class="container-fluid" style="max-width: 1400px; margin: 2em auto;">
                    <h1 style="margin-bottom: 1em">{{ 'sprint_report.heading'|trans }}</h1>
                    <div class="row">
                        <div class="col">
                            <div>
                                <h3>{{ 'sprint_report.heading_overview'|trans }}</h3>
                                <table class="table-auto">
                                    <tbody>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.project'|trans }}: </strong></td>
                                        <td class="border-2 p-2">{{ sprintReport.project.name }}</td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.version'|trans }}: </strong></td>
                                        <td class="border-2 p-2">{{ sprintReport.version.name }}</td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.budget'|trans }}: </strong></td>
                                        <td class="border-2 p-2"><input type="number" id="input-budget"
                                                   style="width: 200px; border: 0"></td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.spent_hours'|trans }}: </strong></td>
                                        <td class="border-2 p-2">
                                            <span id="spent_hours">{{ sprintReport.spentHours }}</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.remaining_hours'|trans }}: </strong></td>
                                        <td class="border-2 p-2" id="remaining_hours">
                                            {{ sprintReport.remainingHours }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.project_hours'|trans }}: </strong></td>
                                        <td class="border-2 p-2" id="project_hours">
                                            {{ sprintReport.spentHours + sprintReport.remainingHours }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.finished_degree'|trans }}: </strong></td>
                                        <td class="border-2 p-2"><input type="number"
                                                   id="input_finished_degree"
                                                   max="100" min="0" style="width: 200px; border: 0;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.project_forecast'|trans }}: </strong></td>
                                        <td class="border-2 p-2"><span id="project_total_forecast"></span></td>
                                    </tr>
                                    <tr>
                                        <td class="border-2 p-2"><strong>{{ 'sprint_report.sub.over_under_index'|trans }}: </strong></td>
                                        <td class="border-2 p-2"><span id="over_under_index"></span></td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div>
                        <h3>{{ 'sprint_report.heading_phases'|trans }}</h3>
                        <table class="table-auto">
                            <thead>
                            <tr>
                                <th class="border-2 p-2">{{ 'sprint_report.table.epic'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.estimate'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.remaining_hours'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.registered_hours'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for epic in sprintReport.epics %}
                                <tr>
                                    <td class="border-2 p-2">{{ epic.name }}</td>
                                    <td class="border-2 p-2">{{ epic.originalEstimateSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">{{ epic.remainingSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">{{ epic.spentSum / 60 / 60 }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <h3>{{ 'sprint_report.heading_spent_hours'|trans }}</h3>
                        <table class="table-auto">
                            <thead>
                            <tr>
                                <th class="border-2 p-2">{{ 'sprint_report.table.epic'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.estimate'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.reg'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.no_sprint'|trans }}</th>
                                {% for sprint in sprintReport.sprints %}
                                    {% if sprint.state != 'FUTURE' %}
                                        <th class="border-2 p-2">{{ sprint.shortName }}</th>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for epic in sprintReport.epics %}
                                <tr>
                                    <td class="border-2 p-2">{{ epic.name }}</td>
                                    <td class="border-2 p-2">{{ epic.originalEstimateSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">{{ epic.spentSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">
                                        {% if epic.loggedWork['NoSprint'] is defined %}
                                            {{ epic.loggedWork['NoSprint'] / 60 / 60 }}
                                        {% endif %}
                                    </td>
                                    {% for sprint in sprintReport.sprints %}
                                        {% if sprint.state != 'FUTURE' %}
                                            <td class="border-2 p-2">
                                                {% if epic.loggedWork[sprint.id] is defined %}
                                                    {{ epic.loggedWork[sprint.id] / 60 / 60 }}
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <h3>{{ 'sprint_report.heading_planned_hours'|trans }}</h3>
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th class="border-2 p-2">{{ 'sprint_report.table.epic'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.estimate'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.remaining_hours'|trans }}</th>
                                <th class="border-2 p-2">{{ 'sprint_report.table.planned_work_sum'|trans }}</th>
                                {% for sprint in sprintReport.sprints %}
                                    {% if sprint.state == 'FUTURE' or sprint.state == 'ACTIVE' %}
                                        <th class="border-2 p-2">{{ sprint.shortName }}</th>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for epic in sprintReport.epics %}
                                <tr>
                                    <td class="border-2 p-2">{{ epic.name }}</td>
                                    <td class="border-2 p-2">{{ epic.originalEstimateSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">{{ epic.remainingSum / 60 / 60 }}</td>
                                    <td class="border-2 p-2">{{ epic.plannedWorkSum / 60 / 60 }}</td>
                                    {% for sprint in sprintReport.sprints %}
                                        {% if sprint.state == 'FUTURE' or sprint.state == 'ACTIVE' %}
                                            <td class="border-2 p-2">
                                                {% if epic.remainingWork[sprint.id] is defined %}
                                                    {{ epic.remainingWork[sprint.id] / 60 / 60 }}
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

