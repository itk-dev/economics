{% extends 'base.html.twig' %}

{% block title %}{{ 'invoices.entry_edit'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'invoices.entry_edit'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <button class="button m-5">{{ 'invoices.search'|trans }}</button>
    {{ form_end(form) }}

    <div>
        <h3 class="subheading">{{ 'worklogs.title'|trans }}</h3>

        <table class="table margin-bottom">
            <thead class="table-thead">
            <tr>
                <th class="table-th"></th>
                <th class="table-th">{{ 'worklog.name'|trans }}</th>
                <th class="table-th">{{ 'worklog.is_billed'|trans }}</th>
                <th class="table-th">{{ 'worklog.epic'|trans }}</th>
                <th class="table-th">{{ 'worklog.version'|trans }}</th>
                <th class="table-th">{{ 'worklog.worker'|trans }}</th>
                <th class="table-th">{{ 'worklog.time_spent'|trans }}</th>
                <th class="table-th">{{ 'worklog.date'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for index, worklog in worklogs %}
                <tr class="{{ index % 2 == 0 ? 'table-tr' : 'table-tr-alt' }}">
                    <td class="table-td"><input type="checkbox" /></td>
                    <td class="table-td">
                        <div>
                            <span>{{ worklog.description }}</span>
                            <span> ({{ worklog.worklogId }})</span>
                        </div>
                        <div class="italic">
                            <span>{{ worklog.issueName }}</span>
                            <span> ({{ worklog.projectTrackerIssueKey }})</span>
                        </div>
                    </td>
                    <td class="table-td">{{ worklog.isBilled ? 'worklog.is_billed_true'|trans : 'worklog.is_billed_false'|trans }}</td>
                    <td class="table-td">{{ worklog.epicName }}</td>
                    <td class="table-td">
                        {% for version in worklog.versions %}{{ version.name }}{% endfor %}
                    </td>
                    <td class="table-td">{{ worklog.worker }}</td>
                    <td class="table-td">{{ worklog.timeSpentSeconds / 60 / 60 }}</td>
                    <td class="table-td">{{ worklog.started|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}
            {% if worklogs is empty %}
                <tr class="table-tr">
                    <td colspan="8" class="table-td">{{ 'invoices.list_no_records_found'|trans }}</td>
                </tr>
            {% endif %}
            <tr class="table-tr">
                <td colspan="8" class="table-td">
                    {{ 'TODO: Save selections actions button' }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="bottom-actions">
        <a class="link" href="{{ path('app_invoices_edit', {'id': invoice.id}) }}">{{ 'invoices.back_to_invoice'|trans }}</a>
    </div>
{% endblock %}
