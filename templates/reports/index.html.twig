{% extends 'base.html.twig' %}

{% block title %}{{ 'reports.title'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'reports.title'|trans }}</h1>

    <div class="content">
      <div class="mt-3 mb-3">
        {{ 'reports.description'|trans }}
      </div>

      <div class="actions">
        <a class="btn-primary" href="{{ path('app_sprint_report', {}|merge(view is defined ? {view: view} : {})) }}">{{ 'reports.fetch_sprint_report'|trans }}</a>
        <a class="btn-primary" href="{{ path('app_management_reports_create', {}|merge(view is defined ? {view: view} : {})) }}">{{ 'reports.fetch_management_report'|trans }}</a>
        <a class="btn-primary" href="{{ path('app_team_reports_create', {}|merge(view is defined ? {view: view} : {})) }}">{{ 'reports.fetch_team_report'|trans }}</a>
      </div>
    </div>
{% endblock %}
