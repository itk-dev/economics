{% extends 'base.html.twig' %}

{% block title %}{{ 'view.edit'|trans }}{% endblock %}

{% block content %}
    <h1 class="page-title">{{ 'view.edit'|trans }}</h1>
    <div>
        {{ 'view.edit_description'|trans }}
    </div>

    {{ form_start(form) }}

    <div {{ stimulus_controller('choices') }}>

        {{ form_row(form.projects) }}
        {{ form_row(form.workers) }}

        <button class="button">{{ 'view.save'|trans }}</button>
    </div>

    {{ form_end(form) }}

    <div class="bottom-actions">
        <a class="link" href="{{ path('app_view_add_abandon', {}|merge(view is defined ? {view: view} : {})) }}">{{ 'view.back_to_list'|trans }}</a>
    </div>
{% endblock %}
