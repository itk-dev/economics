{% extends 'base.html.twig' %}

{% block title %}Delete View{% endblock %}

{% block content %}
  <h1 class="page-title">{{ 'view.delete_page'|trans }}</h1>

  <form method="post" action="{{ path('app_view_delete', {viewId: viewId,'id': view.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ view.id) }}">
    <button class="button button-danger">{{ 'view.action_delete'|trans }}</button>
  </form>
{% endblock %}



