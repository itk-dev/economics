<header class="w-full flex justify-between items-center">
    <h1 class="page-title">{{ title }}</h1>
    {% if type is defined %}
        {% if type == 'link' %}
            <a class="link border border-blue-600 rounded px-3 py-2 no-underline hover:bg-blue-50" href="{{ path(link_url) }}">{{ link_text }}</a>
        {% endif %}
        {% if type == 'action' %}
            {% include 'components/action-button.html.twig' with {
                'url': url|default,
                'reload': reload|default,
                'default_text': default_text|default,
                'loader_text': loader_text|default,
                'success_text': success_text|default,
                'error_text': error_text|default,
            } %}
        {% endif %}
    {% endif %}

</header>
